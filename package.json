  "license": "ISC",
  "bugs": {
    "url": "https://github.com/actions/container-toolkit-template/issues"
  },
  "homepage": "https://github.com/actions/container-toolkit-template#readme",
  "dependencies": {
    "@actions/core": "^1.2.1",
    "@actions/exec": "^1.0.3",
    "@actions/github": "^1.0.0",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.3.0",
    "@slack/webhook": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^12.12.25",
    "@zeit/ncc": "^0.20.5",
    "husky": "^3.1.0",
    "jest": "^24.8.0",
    "jest-circus": "^24.7.1",
    "prettier": "^1.17.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5"
